{
    "name": "@alvinquach/ts-schema-generator",
    "version": "0.0.1-rc1",
    "description": "Generates TypeScript schemas and types",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alvinquach/ts-schema-generator.git"
    },
    "author": "Alvin Quach",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/alvinquach/ts-schema-generator/issues"
    },
    "homepage": "https://github.com/alvinquach/ts-schema-generator#readme",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "exports": {
        "types": "./lib/types/index.d.ts",
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js"
    },
    "types": "lib/types/index.d.ts",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "sideEffects": false,
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "jest": {
        "roots": [
            "test"
        ],
        "testPathIgnorePatterns": [
            "resources"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "dependencies": {
        "jsonschema": "^1.4.1",
        "prettier": "^2.8.8"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.22.1",
        "@babel/preset-env": "^7.22.4",
        "@babel/preset-typescript": "^7.21.5",
        "@types/jest": "^29.5.2",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "cross-env": "^7.0.3",
        "eslint": "^8.42.0",
        "jest": "^29.5.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.0",
        "typescript": "5.0.4"
    }
}
